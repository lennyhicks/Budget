<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:background="@android:color/white"
                android:layout_centerInParent="true"
                android:id="@+id/sendMessage"


        >


    <ImageView
        android:layout_width="120dp"
        app:srcCompat="@drawable/pokeball"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:id="@+id/sendButton"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/messageField"
            android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messageField"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Cancel"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"

        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/sendButton"
        android:layout_alignBottom="@+id/sendButton"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/nameField"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_center_horizontal_offset"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/messageField"/>

    <TextView
        android:text="Send Message To"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>

